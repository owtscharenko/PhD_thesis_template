        //     ]
        // },
        {
            "name": "pdflatex âžž biber âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "biber",
                "makeglossaries",
                "pdflatex",
                "pdflatex"
            ],
        },
    ],
    "editor.wordWrap": "on",
    "ltex.language": "en-GB",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoClean.run": "onFailed"
}